{
    "private": true,
    "scripts": {
        "format": "npm run format:elm && npm run format:assets",
        "format:elm": "elm-format src tests",
        "format:assets": "prettier --write src",
        "repl:elm": "elm repl",
        "repl:ts": "ts-node --skipProject",
        "start": "npm-run-all -p start:frontend start:backend",
        "start:scenario": "parcel serve src/scenario.html -p 8009",
        "start:frontend": "parcel serve src/index.html --public-url /tepa -p 8010 --hmr-port 8020",
        "start:backend": "cd backend && npm start",
        "start:doc": "elm-doc-preview --port=8111",
        "review": "npm run review:elm && npm run review:ts",
        "review:elm": "elm-review --fix",
        "review:ts": "eslint --fix './src/**/*.{js,ts}'",
        "build": "rimraf dist/ && parcel build src/scenario.html src/index.html --no-source-maps --dist-dir dist/ --public-url /tepa",
        "build:scenario": "npm run build:scenario-worker && node ./cli/scenario-markdown.js",
        "build:scenario-worker": "elm make src/ScenarioWorker.elm --output=./dist/scenario-worker.js",
        "test": "npm run test:elm && npm run test:ts && npm run test:assets && npm run test:scenario-worker",
        "test:elm": "elm-review && elm-format --validate src/ && elm-test && elm-verify-examples -r && test ! -d ./tests/VerifyExamples && elm-doc-preview --output /dev/null && elm make --output=/dev/null src/App.elm",
        "test:ts": "tsc --outDir /tmp/winter-morning/supporter && eslint './src/**/*.ts'",
        "test:scenario-worker": "elm make src/ScenarioWorker.elm --output=/tmp/scenario-worker.js",
        "test:assets": "prettier --check src"
    },
    "devDependencies": {
        "@elm-tooling/elm-language-server": "^2.6.0",
        "@parcel/transformer-elm": "^2.8.0",
        "@parcel/transformer-sass": "^2.8.0",
        "@tsconfig/strictest": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "elm-doc-preview": "github:arowM/elm-doc-preview#5.0.5-tepa",
        "elm-format": "^0.8.3",
        "elm-review": "^2.6.1",
        "elm-verify-examples": "^5.2.0",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "postcss": "^8.4.29",
        "postcss-flexbugs-fixes": "^5.0.2",
        "prettier": "^3.0.3",
        "rimraf": "^2.7.1",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-prettier": "1.1",
        "stylelint-scss": "3.18",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "zod": "^3.22.2"
    },
    "dependencies": {
        "elm": "^0.19.1-5",
        "elm-test": "^0.19.1-revision9",
        "highlight.js": "^11.8.0",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.8.0"
    }
}
